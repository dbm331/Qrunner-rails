<div class="messages">
  <div class="container">
    <%= link_to 'New_Message', "messages/new" %>
    <% @message.each do |message| %>

    <div class="message">
      <p class="content"><%= message.content %></p>
      <p class ="time"><%= message.created_at %></p>
    </div>
    <% end %>

    <% if current_user && current_user.admin? %> 
    <p class="recipe-delete"><%= link_to "Delete", message_path(@message), method: "delete" %><p> 
    <% end %>
    <a href="/">Home</a>
  </div>
</div>
